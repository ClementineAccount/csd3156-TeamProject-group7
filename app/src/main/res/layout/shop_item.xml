<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/item_background"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart = "8dp"
        android:src="@color/grey_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="11dp"

        app:layout_constraintStart_toStartOf="@id/item_background"
        app:layout_constraintTop_toTopOf="@id/item_background"
        app:layout_constraintBottom_toBottomOf="@id/item_background" />

    <TextView
        android:id="@+id/item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:paddingStart= "8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintEnd_toEndOf="@id/item_image"
        app:layout_constraintStart_toStartOf="@id/item_image"
        app:layout_constraintTop_toTopOf="@id/item_image"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:paddingStart= "8dp"
        android:paddingEnd="8dp"
        android:text="@string/farm_name"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/item_background"
        app:layout_constraintTop_toTopOf="@id/item_background" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart= "8dp"
        android:paddingEnd="8dp"
        android:text="@string/farm_description"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_name"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        app:layout_constraintEnd_toEndOf="@id/item_name"
        />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart= "8dp"
        android:paddingEnd="8dp"
        android:text="@string/farm_cost"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_description"
        app:layout_constraintTop_toBottomOf="@id/item_description"
        app:layout_constraintEnd_toEndOf="@id/item_description" />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"

        android:text="Buy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf ="@id/item_description"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sell_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"

        android:text="Sell"
        app:layout_constraintTop_toBottomOf="@id/buy_button"
        app:layout_constraintStart_toEndOf ="@id/item_description"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/unlock_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@color/button_tint_selector"
        android:textColor="@color/white"
        android:backgroundTint="@color/button_tint_selector"
        android:text="Unlock"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
