<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.csd3156.team7.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toggleStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle Names"
            android:onClick="onToggleMapStyleClick" />

        <Button
            android:id="@+id/showFarmsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Farms"
            android:onClick="onShowFarmsClick" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/farmNamesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"/>
    </ScrollView>

</LinearLayout>
