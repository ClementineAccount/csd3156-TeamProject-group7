<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weatherTextView"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#F4B6B6"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/shop_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#8C8C8C"
            android:text="@string/currency"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:background="#B6D4F4"
            android:text=""
            android:layout_marginTop="8sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="506dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewInventoryList"
            android:layout_width="match_parent"
            android:layout_height="505dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/howToPlayTextView"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/how_to_play_use_credit_to_buy_shapes_plant_shape_to_get_more_shape" />


</LinearLayout>