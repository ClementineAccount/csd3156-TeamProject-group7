<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shop_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#8C8C8C"
        android:padding="4dp"
        android:text="@string/currency"
        android:textColor="@color/white"
        android:textSize="20sp"
    />

    <TextView
        android:id="@+id/weatherTextView"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:background="#F4B6B6"
        android:text=""
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="506dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewInventoryList"
            android:layout_width="match_parent"
            android:layout_height="505dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/howToPlayTextView"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/how_to_play_use_credit_to_buy_shapes_plant_shape_to_get_more_shape" />


</LinearLayout>